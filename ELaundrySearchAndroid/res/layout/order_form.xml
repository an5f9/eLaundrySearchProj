<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c7d7aa"  >
   
    
    <TextView
    android:id="@+id/laundryName"
    android:layout_width="234dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:text="Kansas Laundry"
    android:textSize="25dp" ></TextView>

    
    <TextView
    android:id="@+id/date"
    android:layout_width="234dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:text="Pick up date and Time"
    android:textSize="15dp" ></TextView>

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
    android:id="@+id/date"
    android:layout_width="234dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:text="Number of Clothes"
    android:textSize="15dp" ></TextView>
    
    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
       <TextView
	    android:id="@+id/reg_clothes"
	    android:layout_width="234dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_height="wrap_content"
	    android:text="Regular Clothes"
	    android:textSize="15dp" ></TextView>
       
        <EditText
            android:id="@+id/reg_clothes_count"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
       <TextView
	    android:id="@+id/dry_cleaning"
	    android:layout_width="234dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_height="wrap_content"
	    android:text="Dry Cleaning"
	    android:textSize="15dp" ></TextView>
       
        <EditText
            android:id="@+id/dry_cleaning_count"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
       <TextView
	    android:id="@+id/wool_clothes"
	    android:layout_width="234dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_height="wrap_content"
	    android:text="Woolen Clothes"
	    android:textSize="15dp" ></TextView>
       
        <EditText
            android:id="@+id/wool_cleaning_count"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </LinearLayout>
    
    	<Button
            android:id="@+id/orderFrmSubmitButton"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="Submit" >
        </Button>
</LinearLayout>
</ScrollView>